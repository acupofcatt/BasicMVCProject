@model BasicMVCProject.Models.CustomerOrderViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Siparişler</title>
</head>
<body>
<h1>Müşteri Bilgileri</h1>
<p><strong>ID:</strong> @Model.Customer.Id</p>
<p><strong>Ad:</strong> @Model.Customer.FirstName</p>
<p><strong>Soyad:</strong> @Model.Customer.LastName</p>
<p><strong>Email:</strong> @Model.Customer.Email</p>

<h2>Siparişler</h2>
<table border="1" cellpadding="5" cellspacing="0">
    <thead>
    <tr>
        <th>Sipariş ID</th>
        <th>Ürün Adı</th>
        <th>Miktar</th>
        <th>Fiyat</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
    <tr>
        <td>@order.Id</td>
        <td>@order.ProductName</td>
        <td>@order.Quantity</td>
        <td>@order.Price.ToString("C")</td>
    </tr>
    }
    </tbody>
</table>
</body>
</html>


